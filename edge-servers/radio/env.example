# Radio Edge Server Environment Configuration

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nsac
POSTGRES_PORT=5434
DATABASE_URL="postgresql://postgres:postgres@radio_postgres:5432/nsac?schema=public"

# Radio Service Configuration
RADIO_SERVER_PORT=8000
RADIO_SERVER_HOST=0.0.0.0

# Radio Broadcasting Configuration
RADIO_ENABLED=true
AM_FREQUENCY=1230
FM_FREQUENCY=101.5
TRANSMIT_POWER=1000
ANTENNA_GAIN=3.0

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_BIT_DEPTH=16
AUDIO_CHANNELS=2
AUDIO_FORMAT=wav

# Text-to-Speech Configuration
TTS_ENABLED=true
TTS_ENGINE=gtts
TTS_LANGUAGE=en-US
TTS_SPEED=1.0
TTS_VOICE=male

# Emergency Alert System (EAS)
EAS_ENABLED=true
EAS_ORIGINATOR_ID=NSAC
EAS_EVENT_CODES=CAE,CAW,FRW,EHW
EAS_DURATION=600

# FCC Compliance
FCC_COMPLIANCE=true
FCC_LICENSE_NUMBER=your_fcc_license
FCC_CALL_SIGN=your_call_sign

# Alert Processing Configuration
ALERT_PROCESSING_INTERVAL=60
MAX_AUDIO_DURATION=300
REPEAT_INTERVAL=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9091

# Geographic Configuration
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en

# Emergency Configuration
EMERGENCY_BROADCAST_ENABLED=true
EMERGENCY_TONE_ENABLED=true
EMERGENCY_REPEAT_COUNT=5

# Rate Limiting
BROADCAST_RATE_LIMIT=10
AUDIO_GENERATION_RATE_LIMIT=20

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5
TIMEOUT_SECONDS=30

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Radio Broadcaster Configuration
BROADCASTER_TYPE=simulated
# Options: simulated, sdr, hardware, api, audio_file
# simulated: For testing and development
# sdr: Software-defined radio equipment
# hardware: Traditional radio station hardware
# api: Radio station API integration
# audio_file: File-based integration for manual broadcasting
