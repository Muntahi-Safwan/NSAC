# TV Edge Server Environment Configuration

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nsac
POSTGRES_PORT=5435
DATABASE_URL="postgresql://postgres:postgres@tv_postgres:5432/nsac?schema=public"

# TV Service Configuration
TV_SERVER_PORT=8000
TV_SERVER_HOST=0.0.0.0

# TV Broadcasting Configuration
TV_ENABLED=true
CABLE_HEADEND_ENABLED=true
SATELLITE_ENABLED=true
DIGITAL_TERRESTRIAL_ENABLED=true

# Video Processing Configuration
VIDEO_RESOLUTION=1920x1080
VIDEO_FRAMERATE=30
VIDEO_BITRATE=5000
VIDEO_CODEC=h264
AUDIO_CODEC=aac

# Graphics and Text Overlay
FONT_FAMILY=Arial
FONT_SIZE=48
TEXT_COLOR=#FFFFFF
BACKGROUND_COLOR=#000000
ALERT_BACKGROUND_COLOR=#FF0000

# Emergency Alert System (EAS)
EAS_ENABLED=true
EAS_ORIGINATOR_ID=NSAC
EAS_EVENT_CODES=CAE,CAW,FRW,EHW
EAS_DURATION=600

# FCC Compliance
FCC_COMPLIANCE=true
FCC_LICENSE_NUMBER=your_fcc_license
FCC_CALL_SIGN=your_call_sign

# Alert Processing Configuration
ALERT_PROCESSING_INTERVAL=60
MAX_VIDEO_DURATION=300
CRAWLER_SPEED=30
OVERLAY_DURATION=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9092

# Geographic Configuration
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en

# Emergency Configuration
EMERGENCY_BROADCAST_ENABLED=true
EMERGENCY_OVERLAY_ENABLED=true
EMERGENCY_CRAWLER_ENABLED=true
EMERGENCY_REPEAT_COUNT=5

# Rate Limiting
BROADCAST_RATE_LIMIT=10
VIDEO_GENERATION_RATE_LIMIT=20

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5
TIMEOUT_SECONDS=30
