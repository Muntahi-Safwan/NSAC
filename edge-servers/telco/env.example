# Telco Edge Server Environment Configuration

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nsac
POSTGRES_PORT=5433
DATABASE_URL="postgresql://postgres:postgres@telco_postgres:5432/nsac?schema=public"

# Telco Service Configuration
TELCO_SERVER_PORT=8000
TELCO_SERVER_HOST=0.0.0.0

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AWS SNS Configuration (Alternative SMS provider)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_SNS_TOPIC_ARN=your_sns_topic_arn

# Firebase Push Notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Voice Call Configuration
VOICE_ENABLED=true
VOICE_PROVIDER=twilio
VOICE_LANGUAGE=en-US
VOICE_SPEED=1.0

# Alert Processing Configuration
ALERT_PROCESSING_INTERVAL=60
MAX_SMS_LENGTH=160
MAX_VOICE_DURATION=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Geographic Configuration
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en

# Emergency Configuration
EMERGENCY_BROADCAST_ENABLED=true
EMERGENCY_PHONE_NUMBERS=911,311
EMERGENCY_SMS_ENABLED=true

# Rate Limiting
SMS_RATE_LIMIT=100
VOICE_RATE_LIMIT=50
PUSH_RATE_LIMIT=1000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=5
TIMEOUT_SECONDS=30
